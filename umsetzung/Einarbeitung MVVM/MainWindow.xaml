<Window x:Class="Einarbeitung_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Einarbeitung_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Hallo, mein Name ist "/>
            <TextBlock Text="{Binding Person.Vorname}"/>
            <TextBlock Text=" "/>
            <TextBlock Text="{Binding Person.Nachname}"/>
            <TextBlock Text=" und ich bin "/>
            <TextBlock Text="{Binding Person.Alter}"/>
            <TextBlock Text=" Jahre alt."/>
        </StackPanel>
    </Grid>
</Window>
